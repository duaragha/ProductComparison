<link rel="stylesheet" href="PC.css">

<header>
  <h1>Product Comparison</h1>
</header>

<main>
  <table class="comparisonTable">
    <thead>
      <tr>
        <th></th>
        <th scope="col">
          <div class="productSelectorContainer">
            <label for="collectionSelector">Select a Collection: </label>
            <select id="collectionSelector" onchange="updateProductList()">
              {% for collection in collections %}
                <option value="{{ collection.id }}">{{ collection.title }}</option>
              {% endfor %}
            </select>
            <br>
            <label for="productSelector">Select a Product:</label>
            <select id="productSelector" onchange="updateComparison('productSelector', 'comparisonResult')"></select>
